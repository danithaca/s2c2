{% extends "user/pre-login.jinja2" %}
{% load bootstrap %}

{% block title %}Signup{% endblock %}

{% block extra_header %}{% verbatim %}
  <script src="http://firstopinion.github.io/formatter.js/javascripts/formatter.min.js" type="text/javascript"></script>
  <script type="text/javascript">
    $(document).ready(function() {
      new Formatter(document.getElementById('id_phone_main'), {
        'pattern': "{{999}}-{{999}}-{{9999}}",
        'persistent': true
      });
    });
  </script>
{% endverbatim %}{% endblock %}

{% block content %}
<div class="panel panel-default">
  <div class="panel-heading">Signup</div>
  <div class="panel-body">
    <form class="form-horizontal" role="form" method="post" action="{% url 'user:signup' %}">
      {% csrf_token %}
      {{ form_user|bootstrap_horizontal:'col-sm-4' }}
      {{ form_staff|bootstrap_horizontal:'col-sm-4' }}
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <button type="submit" class="btn btn-primary">Signup</button>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
