{% extends "base.jinja2" %}
{% load bootstrap %}

{% block title %}Signup{% endblock %}

{% block page %}
<!--div class="alert alert-info" role="alert">Please signup below. You have to use the invitation code.</div-->
<div class="panel panel-primary">
<div class="panel-heading">Signup</div>
<div class="panel-body">
  <form class="form-horizontal" role="form" method="post" action="{% url 'user:signup' %}">
    {% csrf_token %}
{#    {{ form_user|bootstrap_horizontal }}#}
{#    {{ form_staff|bootstrap_horizontal }}#}
    {{ form|bootstrap_horizontal }}
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Signup</button>
      </div>
    </div>
  </form>
</div>
</div>
{% endblock %}
