{% extends "user/pre-login.jinja2" %}
{% load bootstrap %}

{% block content_form %}
<div class="panel panel-default">
  <div class="panel-heading">{{ title }}</div>
  <div class="panel-body">
    <form class="form-horizontal" role="form" method="post" action="{% url 'user:password_reset' %}">
      {% csrf_token %}
      {{ form|bootstrap_horizontal }}
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-primary">Request email</button>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
