{% extends 'slot/command_form.jinja2' %}
{% load bootstrap %}

{% block command_form_content %}
  <form class="form-horizontal" role="form" method="post" action="{% url 'slot:staff_copy' uid=user_profile.pk %}">
    {% csrf_token %}
    {{ command_form_copy|bootstrap_horizontal:'col-sm-4' }}
    <div class="form-group">
      <div class="col-sm-12">
        <button type="submit" class="btn btn-primary">Copy</button>
      </div>
    </div>
    <ul class="help-block">
      <li>Copying will make this day's availability exactly the same as its template.</li>
      <li>Existing classroom assignments in template will not be copied.</li>
    </ul>
  </form>
{% endblock %}