{% extends "base.jinja2" %}
{% load bootstrap %}

{% block title %}{{ title }}{% endblock %}

{% block page %}
  <!--div class="alert alert-info" role="alert">Please signup below. You have to use the invitation code.</div-->
  <div class="panel panel-primary">
    <div class="panel-heading">{{ title }}</div>
    <div class="panel-body">
      <form class="form-horizontal" role="form" method="post" action="{% url 'user:password_reset' %}">
        {% csrf_token %}
        {{ form|bootstrap_horizontal }}
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary btn-lg">Request email</button>
          </div>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
