{% extends "base.jinja2" %}
{% load bootstrap %}

{% block page %}

<div class="row">
<div class="col-md-6">
  <form class="form-horizontal" role="form" method="post" action="{% url 'user:login' %}">
    {% csrf_token %}
    {{ form|bootstrap_horizontal }}
    <button type="submit" class="btn btn-primary">Log in</button>
    <div class="form-group"><input class="form-control" type="hidden" name="next" value="{{ next }}" /></div>
  </form>
</div>
</div>

{% endblock %}